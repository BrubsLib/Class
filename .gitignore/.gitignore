void soma(int x, int y){
    int s=0;
    s = x + y;
    printf("%d + %d = %d",x,y,s);
}
void subtra(int x, int y){
    int s=0;
    s = x - y;
    printf("%d - %d = %d",x,y,s);
}
void multipl(int x, int y){
    int s=0;
    s = x * y;
    printf("%d x %d = %d",x,y,s);
}
void divid(int x, int y){
    int s=0,r;
    s = x / y;
    r=x%y;
    printf("%d / %d = %d\n",x,y,s);
    printf("resto = %d",r);
}
