void op3(int ma[50][50], int nla, int nca){
    //Preencher a matriz A com valores aleatórios

    int i,j;
    printf("\n");
    srand(time(NULL));
    for(i=0; i<nla; i++){
        for(j=0; j<nca; j++){
            ma[i][j] = rand()%100;
        }
    }
    printf("\n");
}
