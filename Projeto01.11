    for(i=0; i<nlb; i++){
        for(j=0; j<ncb; j++){
            mb[i][j] = rand()%100;
        }
    }
    printf("\n");
}
void op10(int ma[50][50], int nla, int nca){
    //Imprimir matriz A
    int i,j;
    printf("\n");
    for(i=0;i<nla;i++){
        for(j=0;j<nca;j++){
            printf("%d ",ma[i][j]);
        }
        printf("\n");
    }
    printf("\n");
}
void op11(int mb[50][50], int nlb, int ncb){
