void op7(int ma[50][50], int nla, int nca, int mb[50][50], int nlb, int ncb){
    //A+B
    //é preciso que todas elas tenham o mesmo número de linhas e de colunas

    if(nla==nlb && nca==ncb){
        //soma
        int mx[nla][nca];
        int i,j;
        for(i=0;i<nla;i++){
            for(j=0;j<nca;j++){
                mx[i][j]=ma[i][j]+mb[i][j];
            }
        }
        printf("Soma das matrizes A e B:\n");
        for(i=0;i<nla;i++){
            for(j=0;j<nca;j++){
                printf("%d ",mx[i][j]);
            }
            printf("\n");
        }
    }else{
        printf("Nao e possivel somar matrizes com tamanhos diferentes.");
    }
}

